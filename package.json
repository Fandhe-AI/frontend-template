{
  "name": "frontend-template",
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@commitlint/cli": "19.8.1",
    "@commitlint/prompt-cli": "19.8.1",
    "@commitlint/types": "19.8.1",
    "@repo/shared-config-biome": "workspace:*",
    "@repo/shared-config-commitlint": "workspace:*",
    "@repo/shared-config-dependency-cruiser": "workspace:*",
    "@repo/shared-config-syncpack": "workspace:*",
    "@repo/shared-config-typescript": "workspace:*",
    "dependency-cruiser": "16.10.4",
    "lefthook": "1.11.16",
    "syncpack": "14.0.0-alpha.18",
    "tsx": "4.20.3",
    "turbo": "2.5.4"
  },
  "engines": {
    "node": "22.17.0",
    "pnpm": "10.12.4",
    "npm": "use pnpm please!",
    "yarn": "use pnpm please!"
  },
  "packageManager": "pnpm@10.12.4",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:no-storybook": "turbo run build --filter=!storybook",
    "build:storybook": "turbo run build --filter=storybook",
    "check:dep": "depcruise --config .dependency-cruiser.js .",
    "check:dep:svg": "depcruise --config .dependency-cruiser.js . --output-type dot | dot -T svg > dependency-graph.svg",
    "check:types": "turbo run check:types",
    "commit": "commit",
    "dev": "turbo run dev",
    "dev:coverage": "turbo run dev --filter=coverage",
    "dev:docs": "turbo run dev --filter=docs",
    "dev:sample:nextjs": "turbo run dev --filter=sample-nextjs --filter=mock",
    "dev:sample:react-router": "turbo run dev --filter=sample-react-router --filter=mock",
    "dev:storybook": "turbo run dev --filter=storybook",
    "format": "biome format . --write",
    "generate": "turbo run generate",
    "generate:api": "turbo run generate --filter=@repo/shared-api-*",
    "lint": "biome check .",
    "lint:fix": "turbo run lint --no-cache -- --write",
    "lint:fix:unsafe": "turbo run lint --no-cache -- --write --unsafe",
    "package:fix": "syncpack fix",
    "package:format": "syncpack format",
    "package:format:check": "turbo run package:format -- --check",
    "package:lint": "syncpack lint",
    "package:list": "syncpack list",
    "package:update": "syncpack update",
    "package:update:check": "turbo run package:update -- --check",
    "storybook:build": "turbo run storybook:build",
    "storybook:dev": "turbo run storybook:dev"
  },
  "type": "module",
  "volta": {
    "node": "22.17.0",
    "pnpm": "10.12.4"
  }
}
