{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo/shared-config-typescript/configs/react-router",
  "include": ["src/**/*", "*.ts", "*.tsx", ".react-router/types/**/*"],
  "exclude": ["node_modules", "../../packages/**/*"],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
