{
  "extends": "@repo/shared-config-typescript/configs/nextjs",
  "compilerOptions": {
    "rootDirs": ["."],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "**/*",
    ".next/types/**/*",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
