{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "//#check:dep": {
      "inputs": [
        "**/*.{ts,tsx,js,jsx}",
        "package.json",
        ".dependency-cruiser.js"
      ],
      "outputs": []
    },
    "//#commit": {},
    "//#check:dep:graph": {
      "inputs": [
        "**/*.{ts,tsx,js,jsx}",
        "package.json",
        ".dependency-cruiser.js"
      ],
      "outputs": ["dependency-graph.*"]
    },
    "//#format": {},
    "//#lint": {},
    "//#package:fix": {},
    "//#package:format": {},
    "//#package:lint": {},
    "//#package:list": {},
    "//#package:update": {},
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**",
        "dist/**"
      ]
    },
    "check:types": {
      "dependsOn": ["^check:types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "dependsOn": ["^generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env.example", ".env"],
      "outputs": ["src/**"]
    },
    "storybook:build": {
      "dependsOn": ["^storybook:build"]
    },
    "storybook:dev": {
      "cache": false,
      "persistent": true
    }
  }
}
